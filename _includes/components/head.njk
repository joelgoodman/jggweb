<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} / Joel G Goodman</title>
  <meta name="description" content="{{ description or excerpt or metadata.description }}">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="robots" content="index,follow">
  <meta name="generator" content="Eleventy">
  {% if site.environment === 'production' %}
  <link rel="preload" href="https://joelgoodman.co/assets/fonts/Gantari-subset.woff2" as="font" type="font/woff2">
  {% endif %}
  <link rel="webmention" href="https://webmention.io/joelgoodman.co/webmention" />
  <link rel="pingback" href="https://webmention.io/joelgoodman.co/xmlrpc" />
  <link rel="alternate" type="application/atom+xml" title="Atom feed for joelgoodman.co" href="/feed/atom.xml" />
  <link rel="preconnect" href="https://use.typekit.net" crossorigin>

  {%- block seo -%}
    {% if cover.image %}
      {% set twitter_card = metadata.cloudinary.prefix + '/' + metadata.cloudinary.ops + ',c_fill,w_800,h_418' + '/' + cover.image %}
      {% set fb_card = metadata.cloudinary.prefix + '/' + metadata.cloudinary.ops + ',c_fill,w_1200,h_630' + '/' + cover.image %}
    {% endif %}
    <!--Twitter Card-->
    <meta name="twitter:site" content="{{ "@" + metadata.author.social.twitter }}">
    <meta name="twitter:creator" content="{{ "@" + metadata.author.social.twitter }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title or metadata.title + ' // ' + metadata.subtitle }}">
    <meta name="twitter:description" content="{{ excerpt or metadata.description }}">
    <meta name="twitter:image" content="{{ twitter_card or metadata.card_image }}">
    <meta name="twitter:image:alt" content="{{ cover.alt or metadata.card_alt }}">

    <!--Schema-->
    <link rel="author" href="{{ metadata.url }}">
    <link rel="publisher" href="{{ metadata.url }}">
    <link rel="icon" href="/assets/icons/favicon.svg" type="image/svg+xml">
    <link rel="mask-icon" href="/assets/icons/safari-pinned-tab.svg" color="#011936">
    <meta itemprop="name" content="{{ title or metadata.title + ' by ' + metadata.subtitle }}">
    <meta itemprop="description" content="{{ excerpt or metadata.description }}">
    <meta itemprop="image" content="{{ twitter_card or metadata.card_image }}">

    <!-- Facebook OpenGraph -->
    <meta property="og:url" content="{{ page.url | url | absoluteUrl(metadata.url) }}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ title or metadata.title + ' by ' + metadata.subtitle }}">
    <meta property="og:image" content="{{ fb_card or metadata.card_image }}">
    <meta property="og:description" content="{{ excerpt or metadata.description }}">
    <meta property="og:site_name" content="{{ title or metadata.title + ' by ' + metadata.subtitle }}">
    <meta property="og:locale" content="{{ metadata.lang }}">
    <meta property="article:author" content="{{ metadata.url }}">
  {%- endblock -%}
  <link rel="preload" as="style" href="https://use.typekit.net/cgh6evo.css" onload="this.onload=null;this.rel='stylesheet'">
  {% if site.environment === 'production' %}
    <!-- INLINE CSS-->
  {% else %}
    <link rel="stylesheet" href="/assets/css/jgg.css">
  {% endif %}
</head>
