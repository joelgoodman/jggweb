<!doctype html>
<html lang="{{metadata.lang}}" dir="ltr"{% if templateClass %} class="{{ templateClass }}"{% endif %}>

{% include "components/head.njk" %}

<body{% if section %} class="{{ section }}"{% else %} class="post"{% endif %}>
  {% include "components/nav.njk" %}
  <main>
    {{ layoutContent | safe }}
  </main>
  {% if page.url === "/" %}
    <figure class="home-cover">
      <img src="https://res-4.cloudinary.com/joelgoodman/image/upload/dpr_auto,f_auto,q_90,w_auto/v1/ghost/home-bg.jpg" alt="Silouetted person looking out from an observatory across a hazy city with rolling hills." decoding="async" width="480" height="900">
    </figure>
  {% elseif page.url === "/subscribed/" %}
    <figure class="home-cover">
      <img src="https://res-4.cloudinary.com/joelgoodman/image/upload/dpr_auto,f_auto,q_90,w_auto/v1/ghost/alley-stairs-lisbon.jpg" alt="Stairs up a dark alley in Portugal." decoding="async" width="480" height="900">
    </figure>
  {% elseif page.url === "/unsubscribed/" %}
    <figure class="home-cover">
      <img src="https://res-4.cloudinary.com/joelgoodman/image/upload/dpr_auto,f_auto,q_90,w_auto/v1/turn-to-clear-og.jpg" alt="Public binoculars with a dial that reads 'Turn to clear vision'." decoding="async" width="480" height="900">
    </figure>
  {% elseif page.url === "/speaking/" %}
    {% include "components/tf.njk" %}
  {% endif %}

  {% include "components/social.njk" %}
  {% include "components/menu.njk" %}
  {% set js %}
    {% include "assets/js/jgg.js" %}
  {% endset %}
  <script>
    {{ js | jsmin | safe }}
  </script>
</body>

</html>
