{
  "name": "jgg11ty",
  "version": "1.2.6",
  "description": "Joel Goodman's personal blog.",
  "repository": "https://github.com/joelgoodman/jggweb",
  "main": "index.js",
  "scripts": {
    "sass": "sass _includes/assets/scss:_includes/assets/css",
    "postcss": "postcss _includes/assets/css/*.css --use autoprefixer cssnano --no-map --replace",
    "build:sass": "npm-run-all --sequential sass",
    "watch:sass": "sass --watch _includes/assets/scss:_includes/assets/css",
    "build:js": "rollup -c",
    "watch:js": "rollup -c --watch",
    "build:eleventy": "ELEVENTY_ENV=production eleventy",
    "watch:eleventy": "ELEVENTY_ENV=development eleventy --serve",
    "start": "cross-env NODE_ENV=development npm-run-all build:sass --sequential postcss build:js --parallel watch:*",
    "debug:start": "DEBUG=Eleventy* npm start",
    "build": "cross-env NODE_ENV=production npm-run-all build:sass --sequential --style=compressed postcss build:js --parallel build:eleventy",
    "debug:build": "DEBUG=Eleventy* npm run build"
  },
  "keywords": [
    "blog",
    "eleventy"
  ],
  "author": "Joel G Goodman",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@ampproject/eleventy-plugin-amp": "^0.5.8",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/markdown-it": "^12.2.3",
    "autoprefixer": "^10.4.12",
    "clean-css": "^5.3.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.13",
    "dotenv": "^16.0.3",
    "eleventy-plugin-blog-tools": "^0.4.1",
    "eleventy-plugin-embed-everything": "^1.14.1",
    "eleventy-plugin-reading-time": "^0.0.1",
    "fs": "0.0.1-security",
    "html-minifier": "^4.0.0",
    "lodash": "^4.17.21",
    "luxon": "^3.0.4",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.5",
    "markdown-it-container": "^3.0.0",
    "node-fetch": "^3.2.10",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "purgecss": "^5.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.55.0",
    "terser": "^5.15.1",
    "uglify-es": "^3.3.9"
  }
}
